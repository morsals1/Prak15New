<Page x:Class="Prak15Mensh.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Prak15Mensh.Pages"
      xmlns:converters="clr-namespace:Prak15Mensh.Converters"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d"
      Loaded="LoadList"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Данные товаров">

    <Grid Margin="5">
        <Grid.Resources>
            <converters:BorderConventer x:Key="cBorder"/>
            <converters:TagsToStringConverter x:Key="TagsConverter"/>
        </Grid.Resources>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
                Visibility="Collapsed" 
                x:Name="ManagerPanel"
                Background="#00C4B4"
                Height="45"
                Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="10,0">
                    <Button Content="Добавить товар" 
                            Click="NewTovarButton"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="White"
                            Margin="0,0,10,0"
                            Padding="10,5"/>

                    <Separator Style="{StaticResource MaterialDesignLightSeparator}" 
                               Margin="0,5,10,5"
                               Foreground="White"
                               Opacity="0.5"/>

                    <Button Content="Категории" 
                            Click="CategoryManagmentButton"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="White"
                            Margin="0,0,10,0"
                            Padding="10,5"/>

                    <Button Content="Бренды" 
                            Click="BrendManagmentButton"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="White"
                            Margin="0,0,10,0"
                            Padding="10,5"/>

                    <Button Content="Теги" 
                            Click="TagManagmentButton"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="White"
                            Padding="10,5"/>
                </StackPanel>
            </Grid>
        </Border>

        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
            <Label>Поиск</Label>
            <TextBox Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}" 
                     materialDesign:HintAssist.Hint="Введите текст для поиска товаров"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="0">
            <Label FontSize="16" FontWeight="Bold">Сортировка</Label>
            <ComboBox SelectedIndex="0" SelectionChanged="ComboBox_SelectionSort">
                <ComboBox.Items>
                    <ComboBoxItem Tag="Name">По названию (А-Я)</ComboBoxItem>
                    <ComboBoxItem Tag="NameDesc">По названию (Я-А)</ComboBoxItem>
                    <ComboBoxItem Tag="PriceAsc">По цене (возрастание)</ComboBoxItem>
                    <ComboBoxItem Tag="PriceDesc">По цене (убывание)</ComboBoxItem>
                    <ComboBoxItem Tag="StockAsc">По количеству (возрастание)</ComboBoxItem>
                    <ComboBoxItem Tag="StockDesc">По количеству (убывание)</ComboBoxItem>
                </ComboBox.Items>
            </ComboBox>

            <Label>Фильтры</Label>

            <StackPanel>
                <Label FontSize="16">Фильтр по категории</Label>
                <ComboBox ItemsSource="{Binding Categories}" 
                          DisplayMemberPath="Name" 
                          SelectedItem="{Binding SelectedCategory, Mode=TwoWay}">
                    <ComboBox.ItemContainerStyle>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="Tag" Value="{Binding Id}"/>
                        </Style>
                    </ComboBox.ItemContainerStyle>
                </ComboBox>
            </StackPanel>

            <StackPanel>
                <Label FontSize="16">Фильтр по бренду</Label>
                <ComboBox ItemsSource="{Binding Brands}" 
                          DisplayMemberPath="Name" 
                          SelectedItem="{Binding SelectedBrand, Mode=TwoWay}">
                    <ComboBox.ItemContainerStyle>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="Tag" Value="{Binding Id}"/>
                        </Style>
                    </ComboBox.ItemContainerStyle>
                </ComboBox>
            </StackPanel>

            <StackPanel>
                <Label FontSize="16">Фильтр по цене</Label>
                <Label>от</Label>
                <TextBox Text="{Binding FilterPriceFrom, UpdateSourceTrigger=PropertyChanged}" 
                         materialDesign:HintAssist.Hint="Минимальная цена"/>
                <Label>до</Label>
                <TextBox Text="{Binding FilterPriceTo, UpdateSourceTrigger=PropertyChanged}" 
                         materialDesign:HintAssist.Hint="Максимальная цена"/>
            </StackPanel>

            <Button Margin="5" Click="ResetFiltersButton_Click">Сбросить</Button>
        </StackPanel>

        <materialDesign:ColorZone Grid.Row="2" Grid.Column="1" Mode="SecondaryMid" Margin="5">
            <ListView ItemsSource="{Binding FilteredProducts}" 
                      MouseDoubleClick="TovarRedaction" 
                      SelectedItem="{Binding SelectedProduct, Mode=TwoWay}"
                      HorizontalContentAlignment="Stretch">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{DynamicResource CardBorder}" BorderThickness="1" BorderBrush="{Binding Stock, Converter={StaticResource cBorder}}">
                            <Grid >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,5">
                                    <TextBlock FontSize="18" FontWeight="Bold" VerticalAlignment="Top">
                                        <Run Text="Название товара"/>
                                        <Run Text="{Binding Name}"/>
                                    </TextBlock>
                                    <TextBlock VerticalAlignment="Top">
                                        <Run Text="★рейтинг"/>
                                        <Run Text="{Binding Rating}"/>
                                    </TextBlock>
                                </StackPanel>

                                <TextBlock Grid.Row="0" Grid.Column="1" FontSize="12" HorizontalAlignment="Right" VerticalAlignment="Top">
                                    <Run Text="Цена "/>
                                    <Run Text="{Binding Price}"/>
                                    <Run Text="$"/>
                                </TextBlock>

                                <StackPanel Grid.Row="1" Grid.Column="0">
                                    <TextBlock Margin="0,5" VerticalAlignment="Top">
                                        <Run Text="Категория "/>
                                        <Run Text="{Binding Category.Name}"/>
                                    </TextBlock>
                                    <TextBlock Margin="0,5" VerticalAlignment="Top">
                                        <Run Text="Описание "/>
                                        <Run Text="{Binding Description}"/>
                                    </TextBlock>
                                </StackPanel>

                                <TextBlock Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                                    <Run Text="Остаток:"/>
                                    <Run Text="{Binding Stock}"/>
                                </TextBlock>

                                <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Bottom" Margin="0,5">
                                    <Run Text="{Binding Tags, Converter={StaticResource TagsConverter}}"/>
                                </TextBlock>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </materialDesign:ColorZone>

        <WrapPanel Grid.Row="3" Grid.ColumnSpan="2" HorizontalAlignment="Left">
            <TextBlock Text="{Binding Products.Count, StringFormat='{}Всего товаров: {0}'}" Margin="0,0,20,0"/>
            <TextBlock Text="{Binding FilteredProducts.Count, StringFormat='{}Показано: {0}'}"/>
        </WrapPanel>
        
        <Button Grid.Row="4" Grid.ColumnSpan="2" Margin="5" Content="Выход" 
                Click="back" HorizontalAlignment="Left"
                Height="30" 
                Width="200"
                Background="#dfeaeb"
                Foreground="#333"/>
    </Grid>
</Page>