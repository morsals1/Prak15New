<Page x:Class="Prak15Mensh.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Prak15Mensh.Pages"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">
    
    <Grid Background="#dfeaeb">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="1" 
                Background="White" 
                BorderBrush="#CCCCCC" 
                BorderThickness="1"
                Margin="100,0"
                Padding="30">
            <StackPanel>
                <TextBlock Text="Магазин электроники" 
                           FontSize="24" 
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>
                
                <Label Content="Пин-код для менеджера"/>
                <PasswordBox x:Name="SignInPassword" 
                             Height="30"
                             HorizontalContentAlignment="Center"/>
                
                <StackPanel Margin="0,20,0,0">
                    <Button Click="ManagerIn" 
                            Content="Войти как менеджер" 
                            Height="30"
                            Background="#00C4B4"
                            Foreground="White"
                            Margin="0,0,0,10"/>
                    
                    <Button Click="UserIn" 
                            Content="Войти как посетитель" 
                            Height="30"
                            Background="#dfeaeb"
                            Foreground="#333"/>
                </StackPanel>
                
                <TextBlock Text="Пин-код менеджера: 1234" 
                           FontSize="12" 
                           Foreground="#666"
                           HorizontalAlignment="Center"
                           Margin="0,20,0,0"/>
            </StackPanel>
        </Border>
    </Grid>

</Page>